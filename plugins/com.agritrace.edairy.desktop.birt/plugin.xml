<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="org.eclipse.ui.startup">
     <startup class="com.agritrace.edairy.desktop.birt.Startup"/>
   </extension>
  
   <extension
         point="org.eclipse.riena.navigation.ui.swt.statusLine">
      <contentFactory
            factory="com.agritrace.edairy.desktop.birt.StatusLineContentFactory">
      </contentFactory>
   </extension>
  
	<extension point="org.eclipse.ui.perspectives">
		<perspective
			class="org.eclipse.riena.navigation.ui.swt.views.SubApplicationView"
			 id="com.agritrace.edairy.desktop.birt.subApplication"
			name="Reports">
		</perspective>
	</extension>
	      
   <extension	
         point="org.eclipse.riena.navigation.assemblies2">
      <assembly2
            id="com.agritrace.edairy.desktop.birt.navigation-assembly"
            name="BIRT Reports Assembly"
            parentNodeId="application">
         <subApplication
               name="BIRT Reports"
               nodeId="com.agritrace.edairy.desktop.birt.subApplication"
               perspectiveId="com.agritrace.edairy.desktop.birt.subApplication">
            <moduleGroup
                  name="Standard Reports"
                  nodeId="com.agritrace.edairy.desktop.birt.standardReportsModuleGroup">
               <module
                     closable="true"
                     name="Standard Reports"
                     nodeId="com.agritrace.edairy.desktop.birt.dummyModule">
                  <subModule
                        controller="com.agritrace.edairy.desktop.birt.viewer.ReportsIndexViewController"
                        expanded="false"
                        name="Standard Reports Index"
                        nodeId="com.agritrace.edairy.desktop.birt.placeHolderModule"
                        selectable="true"
                        sharedView="true"
                        viewId="com.agritrace.edairy.desktop.birt.viewer.reportsIndexView"
                        visible="true">
                  </subModule>
               </module>
            </moduleGroup>
            <moduleGroup
                  name="User Reports"
                  nodeId="com.agritrace.edairy.desktop.birt.userModuleGroup">
            </moduleGroup>
         </subApplication>
      </assembly2>
      
      <assembly2
            assembler="com.agritrace.edairy.desktop.birt.navigation.BirtNavigationNodeAssembler"
            id="com.agritrace.edairy.desktop.birt.navigation-assembly.module-builder"
            name="BIRT Reports Assembly"
            parentNodeId="application">
      </assembly2>
            
   </extension>


	<extension point="org.eclipse.ui.views">
		
		<view allowMultiple="true"
			class="com.agritrace.edairy.desktop.birt.reports.MilkProductionReportView"
			id="reports.milk.production" name="Milk Production Report"
			restorable="true">
		</view>

		<view allowMultiple="true"
			class="com.agritrace.edairy.desktop.birt.reports.MemberPayablesReportView"
			id="com.agritrace.edairy.desktop.birt.reports.MemberPayablesReportView" name="Member Payables Report"
			restorable="true">
		</view>
		
		<view allowMultiple="true"
			class="com.agritrace.edairy.desktop.birt.reports.MemberStatementReportView"
			id="com.agritrace.edairy.desktop.birt.reports.MemberStatementReportView" name="Member Statement Report"
			restorable="true">
		</view>
		
		<view allowMultiple="true"
			class="com.agritrace.edairy.desktop.birt.reports.MonthlyCreditReportView"
			id="com.agritrace.edairy.desktop.birt.reports.MonthlyCreditReportView" name="Monthly Credit Report"
			restorable="true">
		</view>
  <view
        allowMultiple="true"
        class="com.agritrace.edairy.desktop.birt.viewer.ReportView"
        id="com.agritrace.edairy.desktop.birt.standardReportView"
        name="Standard Report View"
        restorable="true">
  </view>
  <view
        allowMultiple="true"
        class="com.agritrace.edairy.desktop.birt.viewer.ReportsIndexView"
        id="com.agritrace.edairy.desktop.birt.viewer.reportsIndexView"
        name="Reports Index"
        restorable="true">
  </view>
		
	</extension>

</plugin>
