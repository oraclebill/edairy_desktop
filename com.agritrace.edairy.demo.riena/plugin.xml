<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.riena.navigation.ui.swt.views.SubApplicationView"
            icon="icons/releng_gears.gif"
            id="com.agritrace.edairy.manager.perspective"
            name="com.agritrace.edairy.manager.perspective">
      </perspective>
   </extension>
   <extension
         id="Application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="com.agritrace.edairy.demo.riena.EDairyManagerApplication">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Dairy Info"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="com.agritrace.edairy.demo.riena.views.FacilityInfoView"
            id="com.agritrace.edairy.demo.riena.views.FacilityInfoView">
      </view>
      <view
            name="Demo Dairy Home"
            allowMultiple="true"
            icon="icons/sample2.gif"
            class="com.agritrace.edairy.demo.riena.views.DairyHomeView"
            id="com.agritrace.edairy.demo.riena.views.DairyHomeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.riena.ui.swt.imagePaths">
      <path
            path="resources">
      </path>
   </extension>
   <extension
         id="edairy_manager"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.agritrace.edairy.demo.riena.Application"
            name="eDairy Manager">
         <property
               name="appName"
               value="eDairy Manager">
         </property>
         <property
               name="aboutImage"
               value="resources/edairy_helpabout.png">
         </property>
         <property
               name="aboutText"
               value="eDairy Manager v0.1a">
         </property>
         <property
               name="windowImages"
               value="icons/cow16.png,icons/cow32.png,icons/cow48.png,icons/cow64.png,icons/cow128.png">
         </property>
      </product>
   </extension>
  
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.agritrace.edairy.demo.riena.splashHandlers.RienaLoginSplashHandler"
            id="com.agritrace.edairy.demo.riena.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.agritrace.edairy.demo.riena.edairy_manager"
            splashId="com.agritrace.edairy.demo.riena.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension> 
   
   <extension
         id="edairy_manager"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.agritrace.edairy.demo.riena.Application"
            name="eDairy Manager">
      </product>
   </extension>
   <extension
         point="org.eclipse.riena.navigation.ui.loginDialogViewDefinition">
      <loginDialogViewDefinition
            nonActivityDuration="0"
            viewClass="com.agritrace.edairy.demo.riena.views.SplashLoginDialogView">
      </loginDialogViewDefinition>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.agritrace.edairy.demo.riena.splashHandlers.InteractiveSplashHandler"
            id="com.agritrace.edairy.demo.riena.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.agritrace.edairy.demo.riena.edairy_manager"
            splashId="com.agritrace.edairy.demo.riena.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>
</plugin>
