<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="eDairy Manager Preferences"
            class="com.agritrace.edairy.desktop.preferences.EDairyPreferencePage"
            id="com.agritrace.edairy.desktop.preferences.EDairyPreferencePage">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.agritrace.edairy.desktop.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="eDairy Manager Desktop"
            id="com.agritrace.edairy.desktop">
      </category>
      <view
            name="Home"
            icon="icons/sample.gif"
            category="com.agritrace.edairy.desktop"
            class="com.agritrace.edairy.desktop.core.views.HomeView"
            id="com.agritrace.edairy.desktop.core.views.HomeView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="com.agritrace.edairy.desktop.core.views.HomeView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
